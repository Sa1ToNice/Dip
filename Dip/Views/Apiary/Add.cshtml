@model ApiaryViewModel


    <div class="container bg-white p-2">
        <nav class="breadcrumb  bg-white">
            <a class="breadcrumb-item" href="/Home">Home</a>
            <a class="breadcrumb-item" href="/Apiary">Apiary</a>
            <span class="breadcrumb-item active">Add</span>
        </nav>

        <div class="three"> <h1 class="text-xl-center">Добавление пасеки</h1></div>

        <h1></h1>


        <form asp-action="Add" asp-controller="Apiary" asp-anti-forgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>


                <div class="form-group ">
                    <label asp-for="Name"><b>Введите Название</b></label>
                    <br />
