@model UserViewModel

<div class="container bg-white p-2">

    <h1>Редактирование</h1>
    <h1></h1>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" asp-controller="Account" asp-anti-forgery="true" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <div class="form-group ">
                        <label asp-for="Id">ID пользователя (Не редактируется)</label>
                        <br />
                        <input type="text" asp-for="Id" value="@Model.Id" readonly />
                        

                    </div>
                    <div class="form-group ">
                        <label asp-for="Name">Введите Имя</label>
                        <br />
                        <input type="text" asp-for="Name" value="@Model.Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label asp-for="Email">Введите Email</label>
                        <br />
                        <input type="text" asp-for="Email" value="@Model.Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label asp-for="Password">Введите пароль</label>
                        <br />
                        <input asp-for="Password" value="@Model.Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label asp-for="ConfirmPassword">Повторите пароль</label>
                        <br />
                        <input asp-for="ConfirmPassword" value="@Model.Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <br />
                    <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
                    <a asp-action="About" asp-controller="Account" value="Завершить" class="btn btn-outline-dark">Завершить</a>

                </div>
            </form>
        </div>
    </div>
</div>


