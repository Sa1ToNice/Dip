@model UserViewModel

    <div class="container bg-white p-2">

        <nav class="breadcrumb bg-white">
            <a class="breadcrumb-item" href="/Home">Home</a>
            <a class="breadcrumb-item" href="/Account/About">Account</a>

            <span class="breadcrumb-item active">Edit</span>
        </nav>

        <div class="three"> <h1 class="text-xl-center">Редактирование профиля</h1></div>

        <h1></h1>


        <form asp-action="Edit" asp-controller="Account" asp-anti-forgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>

                <div class="form-group ">
                    <label asp-for="Id"><b>ID пользователя (Не редактируется)</b></label>
                    <br />
                    <input type="text" asp-for="Id" value="@Model.Id" readonly />


                </div>
                <div class="form-group ">
                    <label asp-for="Name"><b>Введите Имя</b></label>
                    <br />
                    <input type="text" asp-for="Name" value="@Model.Name" onfocus="this.value=''" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="Email"><b>Введите Email</b></label>
                    <br />
                    <input type="text" asp-for="Email" value="@Model.Email" onfocus="this.value=''" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="Password"><b>Введите пароль</b></label>
                    <br />
                    <input asp-for="Password" value="@Model.Password" onfocus="this.value=''" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="ConfirmPassword"><b>Повторите пароль</b></label>
                    <br />
                    <input asp-for="ConfirmPassword" value="@Model.Password" onfocus="this.value=''" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <br />
                <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
                <a asp-action="About" asp-controller="Account" value="Завершить" class="btn btn-outline-dark">Завершить</a>

            </div>
        </form>
        <br/>
       <br />
       <br />
    </div>


